import sys

mapping = {
    "de": {
        "A": "Anton",
        "B": "Boris",
        "C": "Charly",
        "D": "Dieter",
        "E": "Erwin",
        "F": "Franz",
        "G": "Gustav",
        "H": "Heinrich",
        "I": "Ingo",
        "J": "Jakob",
        "K": "Karl",
        "L": "Ludwig",
        "M": "Michael",
        "N": "Norbert",
        "O": "Otto",
        "P": "Paul",
        "Q": "Quentin",
        "R": "Richard",
        "S": "Samuel",
        "T": "Theodor",
        "U": "Ulrich",
        "V": "Viktor",
        "W": "Wilhelm",
        "X": "Xaver",
        "Y": "großes Y",
        "Z": "Zacharias",
        "a": "Anna",
        "b": "Barbara",
        "c": "Christina",
        "d": "Daniela",
        "e": "Emma",
        "f": "Fiona",
        "g": "Greta",
        "h": "Helena",
