        "r": "Rosa",
        "s": "Sophia",
        "t": "Tanja",
        "u": "Ulrike ",
        "v": "Vanessa",
        "w": "Waltraud",
        "x": "Xenia",
        "y": "Yvonne",
        "z": "Zora"
    }
}

def main(argv):
    m = mapping["de"]
    step = 4

    for line in sys.stdin:
        line = line.strip()
        print("# {}".format("_" * max(20, min(70, len(line)))))
        print("# {}".format(line))
        count = 0
        for c in line:
            if count % step == 0:
                print()
            print("\t{}\t{}".format(c, m.get(c, "‹{}›".format(c))))
            count += 1
        print()
        print("# {} characters".format(count))


if __name__ == "__main__":
    try:
        main(sys.argv)
    except KeyboardInterrupt:
        print('Interrupted')
        exit(1)
